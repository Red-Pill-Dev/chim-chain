{
  "name": "chim-chain",
  "version": "0.0.1",
  "description": "CHIM chain project",
  "main": "index.js",
  "scripts": {
    "help": "npx hardhat --help",
    "accounts": "npx hardhat accounts",
    "clean": "npx hardhat clean",
    "build": "npx hardhat compile",
    "flatten": "npx hardhat flatten",
    "test": "npm run rebuild && npx hardhat test",
    "test-verbose": "npx hardhat test --verbose",
    "rebuild": "npm run clean && npm run build",
    "lint": "eslint ./ --fix",
    "lint-quick": "pretty-quick --staged --pattern \"**/*.*(ts|tsx)\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-quick",
      "pre-push": "npm run lint"
    }
  },
  "author": "kampod",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^3.4.0",
    "@openzeppelin/contracts-upgradeable": "^3.4.0",
    "@openzeppelin/hardhat-upgrades": "^1.6.0",
    "@typechain/ethers-v5": "^6.0.5",
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "chai": "^4.3.4",
    "dotenv": "^8.2.0",
    "env-var": "^7.0.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.1.0",
    "hardhat": "^2.1.2",
    "hardhat-typechain": "^0.3.5",
    "husky": "^6.0.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.3",
    "typescript": "^4.2.4"
  }
}
